:root {
    width: 100%;
    height: 100%;

}
.main {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    background-color: rgba(215, 37, 38, 0.4);
}

.wrapper {
    flex-direction: row;
    height: 350px;
}

.left, .right {
    width: 200px;
    height: 100%;
}
.left {
    background-color: #ff0000;
}
.right {
    background-color: #00ff00;

}

.right .unity-list-view__empty-label {
    display: none;
}

.hidden {
    display: none;
}