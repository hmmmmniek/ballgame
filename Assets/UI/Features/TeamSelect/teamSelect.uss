:root {
    width: 100%;
    height: 100%;

}
.main {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    background-color: rgba(215, 37, 38, 0.4);
}

.wrapper {
    flex-direction: column;
    width: 350px;
}


.hidden {
    display: none;
}
.wrapper .team-selector {
    flex-direction: row;
    height: 50px;
}

.wrapper Button.selected {
    background-color: #83B76A;
    border-width: 5px;
}